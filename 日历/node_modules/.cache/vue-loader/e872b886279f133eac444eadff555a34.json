AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA","file":"DatePicker.vue","sourceRoot":".","sourcesContent":["<template>\r\n  <div class=\"date-picker\" v-click-outside>\r\n    <div class=\"picker-input\">\r\n      <span class=\"input-prefix\">\r\n        <i class=\"iconfont iconfont-date\" />\r\n      </span>\r\n      <input type=\"text\" :value=\"showDate\"/>\r\n    </div>\r\n    <div class=\"picker-panel\" v-show=\"showPanel\">\r\n      <div class=\"picker-arrow\" />\r\n      <div class=\"picker-body\">\r\n        <div class=\"picker-header\">\r\n          <span class=\"picker-btn iconfont icon-prev-year\" \r\n          @click=\"onChangeYear('prev')\"/>\r\n          <span class=\"picker-btn iconfont icon-prev-month\" \r\n          @click=\"onChangeMonth('prev')\"/>\r\n          <span class=\"picker-date\">{{showDateHead.year}}年{{showDateHead.month}}月</span>\r\n          <span class=\"picker-btn iconfont icon-next-month\"\r\n           @click=\"onChangeMonth('next')\"/>\r\n          <span class=\"picker-btn iconfont icon-next-year\"\r\n          @click=\"onChangeYear('next')\" />\r\n        </div>\r\n        <div class=\"picker-content\">\r\n          <div class=\"picker-weeks\">\r\n            <div v-for=\"week in ['日','一','二','三','四','五','六']\" :key=\"week\">{{week}}</div>\r\n          </div>\r\n          <div class=\"picker-days\">\r\n            <div v-for=\"(date,index) in showDay\" :key=\"date.getTime()\"\r\n            :class=\"{'other-month':iCur(date,index).otherMonth,\r\n            'is-today': iCur(date,index).isToday,\r\n            'is-select':iCur(date,index).isSel}\"\r\n            @click=\"handleSelect(date)\"\r\n            >{{date.getDate()}}</div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  model: {\r\n    prop: 'date',\r\n    event: 'show-date'\r\n  },\r\n  props: {\r\n    date: {\r\n      type: Date, //构造函数甚至可以是自己定义的\r\n      default: () => new Date() //默认值要跟Type相同，但Type是一个数组或者对象时，要求default是有返回值的函数\r\n    }\r\n  },\r\n  data() {\r\n    return {\r\n      showPanel: false,\r\n      showDateHead: {\r\n        year: 0,\r\n        month: 0,\r\n        day: 0\r\n      },\r\n      isSelected: null,\r\n    };\r\n  },\r\n  computed: {\r\n    showDate() {\r\n      const { year, month, day } = this.getYearMonthDay(this.date);\r\n      return `${year}-${month}-${day}`;\r\n    },\r\n     showDay () {\r\n      const { year, month } = this.showDateHead;\r\n      const firstDay = new Date(year, month-1, 1);//注意传回去的时候如果加1了要减一\r\n      const week = firstDay.getDay();\r\n      const startDay = firstDay - week * 24 * 60 * 60 * 1000;\r\n      var arr = [];\r\n\r\n      for(let i = 0; i < 42; i ++) {\r\n        arr.push(new Date( startDay + i * 24 * 60 * 60 * 1000));\r\n      }\r\n\r\n      return arr;\r\n    },\r\n   \r\n  },\r\n  directives: {\r\n    \"click-outside\": {\r\n      bind(el, binding, vnode) {\r\n        const vm = vnode.context;\r\n        document.onclick = function(e) {\r\n          const dom = e.target;\r\n          const isElSon = el.contains(dom);\r\n          if (isElSon && !vm.showPanel) {\r\n            vm.changePanel(true);\r\n          } else if (!isElSon && vm.showPanel) {\r\n            vm.changePanel(false);\r\n          }\r\n        };\r\n      }\r\n    }\r\n  },\r\n  methods: {\r\n    changePanel(flag) {\r\n      this.showPanel = flag;\r\n    },\r\n    getShowDate(date) {\r\n      const { year, month, day } = this.getYearMonthDay(date);\r\n\r\n      this.showDateHead = {\r\n        year,\r\n        month,\r\n        day\r\n      };\r\n    },\r\n    getYearMonthDay(date) {\r\n      const year = date.getFullYear();\r\n      const month = date.getMonth()+1;\r\n      const day = date.getDate();\r\n\r\n      return {\r\n        year,\r\n        month,\r\n        day\r\n      };\r\n    },\r\n    handleSelect(date){\r\n      if(date.getMonth() != this.showDateHead.month-1){\r\n        this.getShowDate(date);\r\n      }\r\n      this.changeDate(date);\r\n      this.$emit('show-date',date);\r\n    },\r\n    changeDate(newDate){\r\n      this.date = newDate;\r\n      newDate.getTime()\r\n      for(let i=0; i<42; i++){\r\n        if(this.showDay[i].getTime()===newDate.getTime()){\r\n          this.isSelected =  i;\r\n        }\r\n      }\r\n    },\r\n    onChangeMonth(type){\r\n      const { year, month, day } = this.showDateHead;\r\n      const moveMonth = type === 'prev' ? -1 : 1;\r\n      const showDate = new Date(year, month, day);\r\n      showDate.setMonth(month + moveMonth);\r\n      const { year:showYear, month:showMonth } = this.getYearMonthDay(showDate);\r\n      this.showDateHead.year = showYear;\r\n      this.showDateHead.month = showMonth;\r\n    },\r\n     onChangeYear (type) {\r\n      const moveYear = type === 'prev' ? -1 : 1;\r\n      this.showDate.year += moveYear;\r\n    },\r\n    iCur(date,index){\r\n      const nowDate = new Date()\r\n      const {month,day} = this.showDateHead;\r\n      let otherMonth = !(date.getMonth() === month-1);\r\n      let isToday = Math.abs(date-nowDate) < 24*60*60*1000 && day === date.getDate()\r\n\r\n      let isSel = this.isSelected === index;\r\n      return {\r\n        isToday: isToday,\r\n        otherMonth: otherMonth,\r\n        isSel: isSel\r\n      }\r\n    }\r\n  },\r\n  created() {\r\n    this.getShowDate(this.date);\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n@import \"./assets/font.css\";\r\n.date-picker {\r\n  display: inline-block;\r\n}\r\n.picker-input {\r\n  position: relative;\r\n}\r\n.picker-input input {\r\n  height: 40px;\r\n  line-height: 40px;\r\n  padding: 0 30px;\r\n  background-color: #fff;\r\n  border: 1px solid #dcdfe6;\r\n  border-radius: 4px;\r\n  outline: none;\r\n  cursor: pointer;\r\n}\r\n.picker-input .input-prefix {\r\n  position: absolute;\r\n  list-style: none;\r\n  display: inline-block;\r\n  height: 40px;\r\n  line-height: 40px;\r\n  margin-left: 8px;\r\n  color: #dcdfe6;\r\n}\r\n\r\n.picker-panel {\r\n  position: absolute;\r\n}\r\n.picker-panel .picker-arrow {\r\n  position: absolute;\r\n  border: 1px solid #e4e7ed;\r\n  border-bottom: #fff;\r\n  border-right: #fff;\r\n  width: 8px;\r\n  height: 8px;\r\n  background-color: #fff;\r\n  transform-origin: 0 0;\r\n  transform: rotate(45deg);\r\n  left: 30px;\r\n}\r\n.picker-panel .picker-body {\r\n  width: 322px;\r\n  height: 300px;\r\n  margin-top: 5px;\r\n  border: 1px solid #e4e7ed;\r\n  border-radius: 4px;\r\n  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);\r\n  padding: 12px;\r\n}\r\n.picker-panel .picker-body .picker-header {\r\n  text-align: center;\r\n  margin-bottom: 10px;\r\n}\r\n.picker-panel .picker-body .picker-header .picker-btn {\r\n  margin-right: 5px;\r\n  margin-left: 5px;\r\n  font-size: 12px;\r\n  color: #303133;\r\n  cursor: pointer;\r\n}\r\n.picker-panel .picker-body .picker-header .picker-date {\r\n  margin-left: 60px;\r\n  margin-right: 60px;\r\n  font-size: 14px;\r\n}\r\n.picker-panel .picker-body .picker-content .picker-weeks {\r\n  display: flex;\r\n  justify-content: space-around;\r\n  align-items: center;\r\n  border-bottom: 1px solid #e4e7ed;\r\n  padding: 10px 5px;\r\n}\r\n.picker-panel .picker-body .picker-content .picker-days {\r\n  display: flex;\r\n  flex-wrap: wrap;\r\n  justify-content: space-around;\r\n  align-content: space-around;\r\n}\r\n.picker-content .picker-days div {\r\n  width: 30px;\r\n  height: 30px;\r\n  line-height: 30px;\r\n  text-align: center;\r\n  margin: 4px 6px;\r\n  font-size: 12px;\r\n  cursor: pointer;\r\n}\r\n.picker-content .picker-days div:hover {\r\n  color: #409eff;\r\n}\r\n.picker-content .picker-days .is-today {\r\n  color: #409eff;\r\n  font-weight: 700;\r\n}\r\n.picker-content .picker-days div.is-select {\r\n  border-radius: 50%;\r\n  background-color: #409eff;\r\n  color: #fff;\r\n}\r\n.picker-content .picker-days div.other-month {\r\n  color: #c0c4cc;\r\n}\r\n</style>"]}]}